<%= provide(:title, "Coupon Codes") %>

<%= render ('layouts/header') %>

<%= render ('shared/banner-top') %>


  <!-- CONTENT -->
  <section class="ads">
    <div class="container">
      <div class="row">
        <div class="col-sm-8">
          <div class="gradient-bg">
            <div class="ads-list-title">
              YOUR COUPON CODES
            </div>
          </div>
          <div class='whitebox post-new-box'>
            <%= render 'form', coupon_code: @coupon_code %>
          </div>

          <div class='whitebox'>
            <h4>My coupon codes</h4>
            <div class='table'>
              <% @coupon_codes.each do |coupon_code| %>
                <%= render 'coupon_code_row', coupon_code: coupon_code %>
              <% end %>
            </div>

            <div class='row'>
              <div class='col-sm-10 col-sm-offset-1'>
                <strong><i>Don't forget to share your coupon codes to maximize your sales</i></strong>
              </div>
            </div>
          </div>

          <div class="banner-bottom text-center">
            <%= render('shared/banner-bottom')%>
          </div>
        </div>
        <!-- ANOTHER ADS -->
        <div class="col-sm-3">
          <div class="gradient-bg gradient-bg--ads">
            <%= render ('shared/banner-right-sidebar-long') %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--- CONTENT -->
