<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "contact-form" }) do |f| %>
      <%= devise_error_messages! %>
        <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="form-group">
            <%= f.password_field :current_password, autocomplete: "on", class: 'form-control ico-pass-bg--filled', placeholder: 'Enter Old password' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "on", class: 'form-control ico-pass-bg--filled--blue', placeholder: 'Enter New password' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "on", class: 'form-control ico-pass-bg--filled--blue', placeholder: 'Confirm New password' %>
          </div>
        </div>
        </div>

        <div class="two-row-btns pt20">
          <button type="submit" class="btn-pink have-fill">Save</button>
          <button type="" class="btn-blue have-fill">CANCEL</button>
        </div>
      <% end %>