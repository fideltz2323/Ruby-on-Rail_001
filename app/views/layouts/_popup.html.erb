		<div class="row">
			<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
				<div class="selectbox selectbox--blue-gradient">
					 <%= select_tag "post-ad-popup-select", options_for_select(category_collection), {prompt: 'Select category'} %>
